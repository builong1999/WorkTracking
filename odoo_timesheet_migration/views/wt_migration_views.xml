<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wt_migration_form_view" model="ir.ui.view">
        <field name="name">Hosts</field>
        <field name="priority">1</field>
        <field name="model">wt.migration</field>
        <field name="inherit_id" ref="wt_migration.wt_migration_form_view"/>
        <field name="arch" type="xml">
            <group name="atlassian" position="after">
                <group name="odoo_timesheet" string="Odoo Credentials" attrs="{'invisible':[('migration_type','!=','odoo')]}">
                    <field name="database" attrs="{'required': [('migration_type','=','odoo')]}"/>
                </group>
            </group>
        </field>
    </record>
</odoo>