<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="token_confirmation_form_views" model="ir.ui.view">
        <field name="name">Update Token</field>
        <field name="model">token.confirmation</field>
        <field name="inherit_id" ref="wt_migration.token_confirmation_form_views"/>
        <field name="arch" type="xml">
            <field name="token" position="before">
                <field name="login_required" invisible="1"/>
                <field name="login" attrs="{'required': [('login_required', '=', True)], 'invisible': [('login_required', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>