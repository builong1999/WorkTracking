            <field name="name">Administrator</field>
            <field name="category_id" ref="work_abc_management.module_category_work"/>
            <field name="implied_ids" eval="[(4, ref('work_abc_management.group_work_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

