<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="work_budget_tree_view" model="ir.ui.view">
        <field name="name">work.budget.tree.view</field>
        <field name="model">work.budget</field>
        <field name="arch" type="xml">
            <tree decoration-muted="(state == 'invoiced')">
                <field name="currency_id" column_invisible="True"/>
                <field name="start_date" widget="date" />
                <field name="end_date" widget="date" />
                <field name="sequence" widget="handle"/>
                <field name="company_id" optional="hide"/>
                <field name="name"/>
                <field name="project_id" optional="show"/>
                <field name="finance_id" optional="show"/>
                <field name="duration" optional="show"/>
                <field name="duration_percent_used" widget="progressbar" nolabel="1"/>
                <field name="state" decoration-success="state == 'invoiced'" decoration-info="state != 'invoiced'" widget="badge" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="work_budget_minify_tree_view" model="ir.ui.view">
        <field name="name">work.budget.tree.view</field>
        <field name="model">work.budget</field>
        <field name="arch" type="xml">
            <tree decoration-muted="(state == 'invoiced')" default_order="start_date desc, id desc">
                <field name="currency_id" column_invisible="True"/>
                <field name="name"/>
                <field name="start_date" widget="date" />
                <field name="end_date" widget="date" />
                <field name="project_id" optional="show"/>
                <field name="duration" optional="show"/>
                <field name="duration_percent_used" widget="progressbar" nolabel="1"/>
                <field name="amount" widget="monetary" optional="show"/>
                <field name="amount_percent_used" widget="progressbar" nolabel="1"/>
                <field name="state" decoration-success="state == 'invoiced'" decoration-info="state != 'invoiced'" widget="badge" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="work_budget_form_view" model="ir.ui.view">
        <field name="name">work.budget.form.view</field>
        <field name="model">work.budget</field>
        <field name="arch" type="xml">
            <form>
                <field name="freeze_duration" invisible="1"/>
                <header>
                    <button name="action_invoiced" type="object" class="btn btn-secondary" string="Invoiced" invisible="state == 'invoiced'"/>
                    <button name="action_draft" type="object" class="btn btn-secondary" string="Set to draft" invisible="state == 'in_progress'"/>
                    <field name="state" widget="statusbar" statusbar_visible="in_progress,invoiced"/>
                </header>
                <field name="currency_id" invisible="1"/>
                <sheet>
                    <div class="oe_button_box">
                        <button type="object"
                            name="action_open_logs"
                            class="oe_stat_button"
                            icon="fa-calendar"
                            string="Work Logs">
                            <!-- <field name="log_count" widget="statinfo" string="Work Logs"/> -->
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group string="General">
                        <group>
                            <field name="project_id" domain="[('company_id','=',company_id)]"/>
                            <label for="amount"/>
                            <div name="duration_segment d-flex">
                                <field name="amount"/>
                                <span class="d-flex" style="font-size: 0.85em;font-weight:700;">
                                    (
                                    <field name="amount_used" style="width: min-content;" class="text-warning " string="Billing Hours" invisible="amount_percent_used &gt;= 100"/> 
                                    <field name="amount_used" style="width: min-content;" class="text-info" string="Billing Hours" invisible="amount_percent_used != 100"/> 
                                    <field name="amount_used" style="width: min-content;" class="text-danger" string="Billing Hours"  invisible="amount_percent_used &lt;= 100"/>
                                    , <field name="amount_percent_used" style="width: min-content;" />%)
                                </span>
                            </div>
                            <label for="duration"/>
                            <div name="duration_segment d-flex">
                                <field name="duration"/>
                                <span class="d-flex" style="font-size: 0.85em;font-weight:700;">
                                    (
                                    <field name="duration_used" style="width: min-content;" class="text-warning " string="Billing Hours" invisible="duration_percent_used &gt;= 100"/> 
                                    <field name="duration_used" style="width: min-content;" class="text-info" string="Billing Hours" invisible="duration_percent_used != 100"/> 
                                    <field name="duration_used" style="width: min-content;" class="text-danger" string="Billing Hours"  invisible="duration_percent_used &lt;= 100"/>
                                    , <field name="duration_percent_used" style="width: min-content;" />%)
                                </span>
                            </div>
                            <field name="last_invoice_date"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Description..."/>
                        </group>
                    </group>
                    <group string="Selected Area">
                        <group>
                            <label for="start_date" string="Date"/>
                            <div class="o_row">
                                <field name="start_date" widget="daterange" options='{"related_end_date": "end_date"}' readonly="freeze_duration"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" invisible="not start_date and not end_date"/>
                                <field name="end_date" widget="daterange" options='{"related_start_date": "start_date"}' readonly="freeze_duration"/>
                            </div>
                            <field name="log_datetime_field_id"/>
                        </group>
                        <group>
                            <field name="applicable_domain" string="Applicable Logs" widget="domain" options="{'model': 'work.time.log', 'in_dialog': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoices" name="invoices">
                            <field name="budget_invoice_ids" context="{'tree_view_ref': 'work_abc_management.work_budget_invoice_editable_tree_view'}"/>
                        </page>
                        <page string="Security" name="security">
                            <group>
                                <field name="readable_user_ids" widget="many2many_tags"/>
                                <field name="editable_user_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Alert" name="alert">
                            <group>
                                <group>
                                    <field name="alert_duration"/>
                                </group>
                                <group>
                                    <field name="notification_type"/>
                                </group>
                            </group>
                        </page>
                        <page string="Miscellaneous" name="miscellaneous">
                            <group>
                                <field name="company_id"/>
                                <field name="finance_id" domain="[('company_id','=',company_id)]" options="{'no_open': True}" readony="freeze_duration"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="work_budget_search_view" model="ir.ui.view">
        <field name="name">work.budget.search.view</field>
        <field name="model">work.budget</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="finance_id"/>
                <field name="project_id"/>
                <field name="company_id"/>
                <field name="project_id"/>
                <filter string="My Own" name="filter_my_plan" domain="[('create_uid','=', uid)]"/>
                <filter string="Readonly" name="filter_readonly_plan" domain="[('readable_user_ids', 'in', uid)]"/>
                <separator/>
                <filter string="Editable" name="filter_editable_plan" domain="[('editable_user_ids', 'in', uid)]"/>
                <separator/>
                <filter string="Archived" name="filter_archived" domain="[('active','=', False)]"/>
                <filter string="Company" name="group_by_company" context="{'group_by':'company_id'}"/>
                <filter string="Project" name="group_by_project" context="{'group_by':'project_id'}"/>
                <filter string="Finance" name="group_by_finance" context="{'group_by':'finance_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_work_budget" model="ir.actions.act_window">
        <field name="name">Budget Planning</field>
        <field name="res_model">work.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_project': True}
        </field>
        <field name="view_id" ref="work_budget_tree_view"/>
        <field name="search_view_id" ref="work_abc_management.work_budget_search_view"/>
    </record>

</odoo>