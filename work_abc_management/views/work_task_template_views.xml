<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="work_task_template_tree_view" model="ir.ui.view">
        <field name="name">Task Templates</field>
        <field name="priority">1</field>
        <field name="model">work.task.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="allowed_user_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="work_task_template_form_view" model="ir.ui.view">
        <field name="name">Task Template</field>
        <field name="priority">1</field>
        <field name="model">work.task.template</field>
        <field name="arch" type="xml">
            <form>
                <field name="company_id" invisible="1"/>
                <header>
                    <button name="action_clone_template" confirm="Perform this action will generate tasks" string="Clone Tasks" type="object" class="btn-primary"/>
                </header>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="epic_id"/>
                            <field name="type_id"/>
                            <field name="priority_id"/>
                        </group>
                        <group>
                            <field name="allowed_user_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <field name="template_line_ids" context="{
                        'default_project_id': project_id,
                        'default_epic_id': epic_id,
                        'default_type_id': type_id,
                        'default_priority_id': priority_id
                    }">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="project_id" optional="hide"/>
                            <field name="type_id"/>
                            <field name="template" widget="html" class="oe-bordered-editor" options="{'style-inline': true, 'codeview': true, 'dynamic_placeholder': true}"/>
                            <field name="name"/>
                            <field name="epic_id"/>
                            <field name="priority_id"/>
                        </tree>
                    </field>
            </form>
        </field>
    </record>

    <record id="work_task_template_search_view" model="ir.ui.view">
        <field name="name">Task Template</field>
        <field name="model">work.task.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_id"/>
                <field name="allowed_user_ids"/>
                <separator/>
                <filter string="Project" name="group_by_project" context="{'group_by':'project_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_task_template" model="ir.actions.act_window">
        <field name="name">Task Template</field>
        <field name="res_model">work.task.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="work_task_template_tree_view"/>
        <field name="search_view_id" ref="work_abc_management.work_task_template_search_view"/>
    </record> 
</odoo>