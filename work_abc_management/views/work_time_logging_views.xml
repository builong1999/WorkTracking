<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="work_time_log_pivot_view" model="ir.ui.view">
        <field name="name">Task Logs Pivots</field>
        <field name="model">work.time.log</field>
        <field name="arch" type="xml">
            <pivot string="Work Logs Analysis" sample="1">
                <field name="user_id" type="col"/>
                <field name="start_date" interval="week" type="row"/>
                <field name="duration_hrs" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="work_time_log_tree_view" model="ir.ui.view">
        <field name="name">Work Logs</field>
        <field name="model">work.time.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="task_id"/>
                <field name="time"/>
                <field name="description"/>
                <field name="duration_hrs" sum="Total"/>
                <field name="state"/>
                <field name="user_id"/>
                <field name="start_date" string="Start Date"/>
            </tree>
        </field>
    </record>

    <record id="work_time_log_form_view" model="ir.ui.view">
        <field name="name">Work Logs</field>
        <field name="model">work.time.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="task_id"/>
                        <field name="time"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="work_time_log_search_view" model="ir.ui.view">
        <field name="name">Work Logs</field>
        <field name="model">work.time.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_id"/>
                <field name="user_id"/>
                <field name="project_id"/>
                <separator/>
                <filter string="My Logs" name="filter_by_my_log" domain="[('user_id','=', uid)]"/>
                <separator/>
                <filter string="Billable" name="billable" domain="[('task_id.billable_state', '=', 'bill')]"/>
                <filter string="Non-Billable" name="non_billable" domain="[('task_id.billable_state', '=', 'non-bill')]"/>
                <separator/>
                <filter string="Development" name="development" domain="[('task_id.task_name', 'not ilike', 'TEST'), ('task_id.task_name', 'not ilike', 'ESTIMATE')]"/>
                <filter string="Estimate" name="estimate" domain="[('task_id.task_name', 'ilike', 'ESTIMATE')]"/>
                <filter string="Test" name="test" domain="[('task_id.task_name', 'ilike', 'TEST')]"/>
                <group expand="0"  string="Date Range">
                    <filter string="Last Week" name="last_week" domain="[('filter_date', '=', 'last_1_week')]"/>
                    <filter string="This Week" name="current_week" domain="[('filter_date', '=', 'week')]"/>
                    <filter string="Last Month" name="last_month" domain="[('filter_date', '=', 'last_1_month')]"/>
                    <filter string="This Month" name="current_month" domain="[('filter_date', '=', 'month')]"/>
                    <filter string="Last Quarter" name="last_quarter" domain="[('filter_date', '=', 'last_1_quarter')]"/>
                    <filter string="This Quarter" name="current_quarter" domain="[('filter_date', '=', 'quarter')]"/>
                </group>
                <separator/>
                <filter string="Project" name="group_by_project_id" context="{'group_by':'project_id'}"/>
                <filter string="Epic" name="group_by_user_id" context="{'group_by':'epic_id'}"/>
                <filter string="Task" name="group_by_task_id" context="{'group_by':'task_id'}"/>
                <filter string="User" name="group_by_user_id" context="{'group_by':'user_id'}"/>
                <filter string="Task" name="group_by_task_id" context="{'group_by':'task_id'}"/>
                <separator/>
                <filter string="Billable" name="group_by_billable_state" context="{'group_by':'billable_state'}"/>
                <separator/>
                <filter string="Logged Date" name="group_by_start_date" context="{'group_by':'start_date'}"/>
                
            </search>
        </field>
    </record>

    <record id="action_work_time_log" model="ir.actions.act_window">
        <field name="name">Work Logs</field>
        <field name="res_model">work.time.log</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="context">{'search_default_group_by_project_id': True, 'search_default_group_by_user_id': True, 'search_default_group_by_task_id': True, 'search_default_filter_by_my_log': True}</field>
        <field name="view_id" ref="work_time_log_tree_view"/>
        <field name="search_view_id" ref="work_abc_management.work_time_log_search_view"/>
    </record>
</odoo>