<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="work_type_tree_view" model="ir.ui.view">
        <field name="name">Task Types</field>
        <field name="model">work.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="epic_ok" optional="hide"/>
                <field name="name"/>
                <field name="img_url"/>
                <field name="key"/>
                <field name="default_personal"/>
            </tree>
        </field>
    </record>

    <record id="action_work_type" model="ir.actions.act_window">
        <field name="name">Task Types</field>
        <field name="res_model">work.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="work_type_tree_view"/>
    </record>

</odoo>