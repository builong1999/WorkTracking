<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">
    <record id="ir_cron_fetch_user_from_work" model="ir.cron">
        <field name="name">Task load all users</field>
        <field name="model_id" ref="model_work_base_integration"/>
        <field name="state">code</field>
        <field name="code">model.load_all_users()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="ir_cron_re_export_task" model="ir.cron">
        <field name="name">Re Export Task</field>
        <field name="model_id" ref="model_work_task"/>
        <field name="state">code</field>
        <field name="code">model.re_export_work_log()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>


    <record id="ir_cron_update_task_project" model="ir.cron">
        <field name="name">Task Project: Update Tasks</field>
        <field name="model_id" ref="model_work_project"/>
        <field name="state">code</field>
        <field name="code">model.cron_fetch_task()</field>
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

</odoo>