<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="work_hr_form_view_inherited" model="ir.ui.view">
        <field name="name">Task Configurations</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="work_abc_management.work_hr_form_view_inherited"/>
        <field name="arch" type="xml">
            <group name="general_settings" position="after">
                <group string="Server Integration" name="host_integration">
                    <field name="is_work_admin"/>
                    <field name="auto_export_work_log"/>
                </group>
            </group>
            <xpath expr="//header" position="inside">
                <button name="action_update_token" type="object" string="Update Token" class="btn-primary"/>
            </xpath>
        </field>
    </record>
    <record id="work_hr_form_view_public_inherited" model="ir.ui.view">
        <field name="name">Task Configurations</field>
        <field name="model">hr.employee.public</field>
        <field name="inherit_id" ref="work_abc_management.work_hr_form_view_public_inherited"/>
        <field name="arch" type="xml">
            <group name="general_settings" position="after">
                <group name="Server Integration">
                    <field name="is_work_admin"/>
                    <field name="auto_export_work_log"/>
                </group>
            </group>
            <xpath expr="//header" position="inside">
                <button name="action_update_token" type="object" string="Update Token" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>