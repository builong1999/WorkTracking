<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="work_base_integration_tree_view" model="ir.ui.view">
        <field name="name">Hosts</field>
        <field name="priority">1</field>
        <field name="model">work.base.integration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="host_type"/>
                <field name="name"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="work_base_integration_form_view" model="ir.ui.view">
        <field name="name">Hosts</field>
        <field name="priority">1</field>
        <field name="model">work.base.integration</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button groups="work_abc_management.group_work_manager" name="load_projects" type="object" string="Load All Projects" class="btn-primary"/>
                    <button groups="work_abc_management.group_work_manager" invisible="host_type != 'atlassian'" name="load_boards" type="object" string="Load Boards" class="btn-primary"/>
                    <button groups="work_abc_management.group_work_manager" invisible="host_type != 'atlassian'" name="load_sprints" type="object" string="Load Sprints" class="btn-primary"/>
                    <button groups="work_abc_management.group_work_admin" invisible="host_type != 'atlassian'" name="action_regenerate_field_maps" type="object" string="Re-Generate Field Maps" class="btn-secondary"/>
                    <button groups="work_abc_management.group_work_manager" name="load_all_users" type="object" string="Load Users" class="btn-primary"/>
                    <button groups="work_abc_management.group_work_manager" name="load_all_tasks" type="object" string="Load All Tasks" class="btn-primary"/>
                    <button name="load_my_tasks" type="object" string="Load My Tasks" class="btn-primary"/>
                    <button name="load_by_links" type="object" string="Load By Keys" class="btn-primary"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="avatar" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name"/>
                            </div>
                        </h1>
                    </div>
                    <group name="host" string="Hosts">
                        <field nolabel="1" name="host_type" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    <group>
                        <group name="host" string="Server">
                            <field name="base_url" widget="url"/>
                            <field name="timezone"/>
                        </group>
                        <group name="general_settings" string="General Settings">
                            <field name="company_id"/>
                            <field name="admin_user_ids" widget="many2many_tags"/>
                            <field name="allowed_user_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <group name="atlassian" string="Atlassian" invisible="host_type != 'atlassian'">
                            <field name="work_host_url"/>
                            <field name="work_agile_url"/>
                            <field name="auth_type"/>
                            <field name="host_service"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ops">
                            <group>
                                <field name="base_task_url"/>
                            </group>
                            <group>                                <group>
                                    <field name="is_round_robin" invisible="admin_user_ids"/>
                                    <field name="full_sync"/>
                                </group>
                                <group>
                                    <field name="import_work_log"/>
                                    <field name="is_load_acs"/>
                                    <field name="auto_export_work_log"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bans">
                            <field name="unaccess_token_user_ids">
                                <tree>
                                    <field name="user_id" required="1"  options="{'no_create': 1, 'no_quick_create': 1, 'no_create_edit': 1}"/>
                                    <field name="write_date" string="Last Updated"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="work_base_integration_search_view" model="ir.ui.view">
        <field name="name">Hosts</field>
        <field name="model">work.base.integration</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="All" name="all" domain="[('active','in', (True, False))]"/>
                <filter string="Company" name="group_by_company" context="{'group_by':'company_id'}"/>
                <filter string="Type" name="group_by_type" context="{'group_by':'host_type'}"/>
            </search>
        </field>
    </record>

    <record id="action_work_base_integration" model="ir.actions.act_window">
        <field name="name">Hosts</field>
        <field name="res_model">work.base.integration</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_all': 1}</field>
        <field name="view_id" ref="work_base_integration_tree_view"/>
    </record>


    <record id="host_manager_rule" model="ir.rule">
        <field name="name">Manager Full Access</field>
        <field name="model_id" ref="model_work_base_integration"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('work_abc_management.group_work_admin'))]"/>
    </record>

    <record id="host_user_limited_access" model="ir.rule">
        <field name="name">User Limited Access</field>
        <field name="model_id" ref="model_work_base_integration"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>