<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="fetch_by_endpoint_form_view" model="ir.ui.view">
        <field name="name">Fetch By Enpoint</field>
        <field name="model">work.fetch.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="query"/>
                        <field name="host_id"/>
                        <field name="user_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_load" string="Load" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="work_fetch_task_action_form" model="ir.actions.act_window">
        <field name="name">Load Tasks</field>
        <field name="res_model">work.fetch.task</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="fetch_by_endpoint_form_view"/>
        <field name="target">new</field>
    </record>
    
    <menuitem id="work_base_integration.work_fetch_task_menu"
              name="Load Task"
              action="work_base_integration.work_fetch_task_action_form"
              sequence="1"
              parent="work_abc_management.operation_integration"
              >
    </menuitem>
</odoo>