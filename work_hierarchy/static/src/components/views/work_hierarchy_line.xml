<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="work_hierarchy.work_hierarchy_line" owl="1">
        <tr t-attf-class="o_work_hierarchy_report_line {{recordData.style}}" t-att-data-level="level" t-att-data-group="props.group" t-ref="lineComponent" t-on-click="onLineClick">
            <th class="o_list_char o_group_name ">
                <div t-att-style="'margin-left: ' + margin + 'px;'" class="display-name">
                    <span t-attf-class="o_account_reports_caret_icon">
                        <i class="fa fa-caret-down" role="img"
                            aria-label="Unfolded" title="Unfolded"/>
                        <i class="fa fa-caret-right" role="img"
                            aria-label="Folded" title="Folded"/>
                    </span>
                    <span ><t t-esc="recordData.name || ''"/></span>
                </div>
            </th>
            <td t-foreach="headers" t-as="item" t-key="item.key" t-attf_class="o_list_number {{recordData['style_'+ item.key]}}">
                <t t-esc="convertNumToTime(recordData[item.key])"/>
                <sup class="standard-deviation" t-if="recordData[item.key+'_standard_deviation'] !== undefined" t-esc="100*recordData[item.key+'_standard_deviation']"/>
            </td>
        </tr>
    </t>
</templates>
