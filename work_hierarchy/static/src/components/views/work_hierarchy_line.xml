<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="work_hierarchy.work_hierarchy_line" owl="1">
        <tr class="o_work_hierarchy_report_line" t-att-data-level="level" t-att-data-group="props.group" t-ref="lineComponent">
            <th class="o_list_char o_group_name fs-6 fw-bold text-900" t-on-click="onLineClick">
                <div t-att-style="'margin-left: ' + margin + 'px;'" class="display-name">
                    <span t-attf-class="o_account_reports_caret_icon">
                        <i class="fa fa-caret-down" role="img"
                            aria-label="Unfolded" title="Unfolded"/>
                        <i class="fa fa-caret-right" role="img"
                            aria-label="Folded" title="Folded"/>
                    </span>
                    <span ><t t-esc="recordData.name || ''"/></span>
                </div>
            </th>
            <td t-foreach="headers" t-as="item" t-key="item.key" class="o_list_number">
                <t t-esc="convertNumToTime(recordData[item.key])"/>
            </td>
        </tr>
    </t>
</templates>
